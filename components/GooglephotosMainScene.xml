<?xml version = "1.0" encoding = "utf-8" ?>

<component name = "GooglePhotosMainScene" extends = "Scene" initialFocus = "homeGrid" >

  <script type="text/brightscript" uri="pkg:/components/GooglePhotosMainScene.brs" />

  <children >

    <Overhang
      showClock="false"
      logoBaselineOffset = "70"
      logoUri="pkg:/images/Logo_Overhang_HD.png" />

    <MarkupGrid 
      id = "homeGrid" 
      translation = "[ 30, 240 ]" 
      itemComponentName = "markupgridItem" 
      numColumns = "5" 
      numRows = "1" 
      itemSize = "[ 220, 250 ]" 
      itemSpacing = "[ 20, 20 ]"
      drawFocusFeedback = "false" />

    <Label
      id="itemLabelMain1"
      height="720"
      width="1280"
      font="font:LargeBoldSystemFont"
      color="#808080"
      text = "My Albums"
      horizAlign = "center"
      vertAlign = "center"
      translation="[0,175]" />
    
    <Label
      id="itemLabelMain2"
      height="720"
      width="1280"
      font="font:MediumSystemFont"
      color="#808080"
      text = "Browse your albums"
      horizAlign = "center"
      vertAlign = "center"
      translation="[0,225]" />
    
    <Label
      id="itemLabelMain3"
      height="720"
      width="1200"
      font="font:MediumBoldSystemFont"
      color="#808080"
      horizAlign = "right"
      vertAlign = "top"
      translation="[0,65]" />

  </children>

</component>
