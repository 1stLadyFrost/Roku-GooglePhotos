<?xml version = "1.0" encoding = "utf-8" ?>

<component name = "markupgridItem" extends = "Group" >
 
    <interface> 
        <field id = "itemContent" type = "node" onChange = "showcontent" />
        <field id = "focusPercent" type = "float" onChange = "showfocus" />
        <field id = "itemFocused" type = "node" />
        <field id = "itemSelected" type = "node" />
    </interface>
 
    <script type = "text/brightscript" uri = "pkg:/components/Utils/Markupgriditem/markupgridItem.brs" />

    <children>

        <Poster 
            id                  = "itemPoster" 
            translation         = "[ 22, 25 ]"
            width               = "200" 
            height              = "200"
            scaleRotateCenter   = "[ 100.0, 244.0 ]" >

            <Rectangle 
                id                  = "itemMask" 
                color               = "#EBEBEB"
                opacity             = "0.50" 
                width               = "220" 
                height              = "220" 
                scaleRotateCenter   = "[ 205.0, 144.0 ]"
            />
    
        </Poster>
    
  </children>
</component>
