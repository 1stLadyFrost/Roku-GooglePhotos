<?xml version = "1.0" encoding = "UTF-8"?>

<component name = "MultiScroll" extends = "Group" >

    <interface>
        <field id = "predecessor" type = "string" />
        <field id = "content"     type = "array" />
        <field id = "albumobject" type = "assocarray" />
        <field id = "showres"     type = "string" />
        <field id = "loaded"      type = "boolean" />
    </interface>

    <script type = "text/brightscript" uri = "pkg:/components/SlideShow/DisplayPhotos/MultiScroll/MultiScroll.brs" />
    <script type = "text/brightscript" uri = "pkg:/components/SlideShow/SlideshowHelper.brs" />
    <script type = "text/brightscript" uri = "pkg:/components/Utils/Common.brs" />
    <script type = "text/brightscript" uri = "pkg:/components/Utils/private-git.brs" />

    <children>

        <ScrollingImage id = "scroll_node_1" duration = "30" />
        <ScrollingImage id = "scroll_node_2" duration = "26" />
        <ScrollingImage id = "scroll_node_3" duration = "32" />
        <ScrollingImage id = "scroll_node_4" duration = "27" />
        <ScrollingImage id = "scroll_node_5" duration = "27" />
        <ScrollingImage id = "scroll_node_6" duration = "32" />
        <ScrollingImage id = "scroll_node_7" duration = "23" />
        <ScrollingImage id = "scroll_node_8" duration = "20" />

        <!-- Used to display screensaver screen -->
        <Rectangle
            id          = "RediscoverScreen"
            color       = "0x000000"
            height      = "35"
            width       = "340"
            translation = "[0,1020]"
            opacity     = ".7"
            visible     = "false" >
         
            <Label 
               id           = "RediscoverDetail" 
               height       = "35" 
               width        = "335"
               horizAlign   = "left"
               vertAlign    = "center"
               color        = "#eaeaea"
               translation  = "[ 55, 0 ]" >            
            </Label>
      
        </Rectangle>
        
        <!-- Screensaver watermark -->
        <Poster
            id          = "Watermark"
            translation = "[1700,1010]"
            visible     = "false"
        />
        
        <!-- Required Timers -->
        <Timer
            id          = "waveTimer"
            repeat      = "true"
            duration    = "5"
        />
        
        <Timer
            id          = "refreshTimer"
            repeat      = "true"
            duration    = "1"
        />
  
        <Timer
            id          = "DownloadTimer"
            duration    = "2"
        />
        
        <Timer
            id          = "URLRefreshTimer"
            duration    = "1500"
        />
 
        <Timer
            id          = "moveWatermark"
            repeat      = "true"
            duration    = "1200"
        />
        
    </children>
</component>
