<?xml version = "1.0" encoding = "utf-8" ?>

<component name = "Search" extends = "Group" initialFocus = "miniKeyboard" >

    <interface>
    </interface>

    <script type = "text/brightscript" uri = "pkg:/components/Search/Search.brs" />
    <script type = "text/brightscript" uri = "pkg:/components/SlideShow/SlideshowHelper.brs" />
    <script type = "text/brightscript" uri = "pkg:/components/Utils/Common.brs" />
    <script type = "text/brightscript" uri = "pkg:/components/Utils/private-git.brs" />
  
    <children>
    
        <MiniKeyboard
            id          = "miniKeyboard"
            translation = "[ 150, 160 ]"
            keyColor    = "#8a8b8c" >
 
            <Label 
                id          = "infoLabel" 
                translation = "[ 480, 0 ]" 
                height      = "460" 
                width       = "580"
                text        = "Recent Searches:"
                color       = "#808080"
                font        = "font:MediumBoldSystemFont"
                />
    
            <Rectangle 
                id          = "infoRectangle" 
                translation = "[ 515, 40 ]" 
                height      = "420" 
                width       = "435" 
                color       = "#606060" >

                <Label 
                    id          = "infoLabel" 
                    translation = "[ 15, 15 ]" 
                    height      = "460" 
                    width       = "580" 
                    wrap        = "true"
                    color       = "#F8F8F8"
                    font        = "font:SmallSystemFont"
                />
  
                <RadioButtonList
                    id          = "searchHistoryList"
                    visible     = "true"
                    itemSize    = "[350,35]"
                    translation = "[ 30, 20 ]"
                    vertFocusAnimationStyle = "floatingFocus"
                    checkOnSelect = "false"
                />
                       
            </Rectangle>

            <Button
                id          = "searchBtn"
                text        = "Search"
                textColor   = "#808080"
                translation = "[ 115, 465 ]"
                minWidth    = "50"
                height      = "50"
                showFocusFootprint = "true"
            />
            
            <Button
                id          = "clearSearchBtn"
                text        = "Clear Search History"
                textColor   = "#808080"
                height      = "50"
                translation = "[ 570, 465 ]"
                showFocusFootprint = "true"
            />
            
        </MiniKeyboard>
  
        <ProgressDialog
            id      = "searchProgress"
            title   = "Please wait"
            visible = "false"
        />
    
  </children>
</component>
